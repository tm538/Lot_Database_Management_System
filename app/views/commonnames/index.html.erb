<% provide(:title, 'All Common Names') %>
<h1>All Common Names</h1>

<%= will_paginate %>

<ul class="commonnames">
  <% @commonnames.each do |commonname| %>
    <li>
      <%= link_to commonname.name, commonname %>
      | <%= link_to "edit", edit_commonname_path(commonname) %>
      <% if current_user.admin? %>
    	| <%= link_to "delete", commonname, method: :delete,
                                  data: { confirm: "You sure you wish to delete this common name?" } %>
  	   <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>