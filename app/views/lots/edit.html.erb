<% provide(:title, 'Update lot') %>
<h1>Lot Number: <%= @lot.id.to_s %></h1>

<div class="row">
  <div class="span5 offset0">

	<%= render 'lots/editactions' %>
	<%= render 'lots/changelog' %>		

	
 </div>
  <div class="span7 offset0">
	  <%= form_for(@lot, :html => { :class => "form-horizontal" }) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
		<%= render :partial => 'lots/form', :locals => { :f => f, :extra_btn => false, :collapse_in => false } %>
	  
  		<div class="pagination-centered">
	 		<%= f.submit "Save changes", class: "btn btn-warning" %>
		</div>
	  <% end %>
  </div>
</div>