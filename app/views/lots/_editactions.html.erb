<div class="data-entry-header">
  <h2>Actions <a href="#options" data-toggle="collapse" class="pull-right  icon-resize-vertical icon-white"></a>
  </h2>
</div>
<p>Commonly used actions.</p>

<div id="options" class="collapse in display-none">
	<ul>
		<li>
			<%= link_to @client do %>
				View client contact details
				<%= render :partial => "layouts/hint", :locals => {:hint => "View the full contact details for the client currently assigned to this sample."} %>
			<% end %>
		</li>
		<li>
			<%= link_to @lot do %>
				View history
				<%= render :partial => "layouts/hint", :locals => {:hint => "View details of all changes made to this lot numbers details."} %>
			<% end %>
		</li>
		<% if !@lot.batch_id.nil? %>
			<li>
				<%= link_to edit_batch_path(@lot.batch_id) do %>
					View batch details
					<%= render :partial => "layouts/hint", :locals => {:hint => "View the batch associated with this sample."} %>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>