<% provide(:title, 'Add Sample Type') %>
<h1>New Sample Type</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@sampletype) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	  
      <%= f.submit "Add sample type", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>