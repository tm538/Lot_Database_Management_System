<% provide(:title, 'Update Sample Type') %>
<h1>Update Sample Type</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@sampletype, :html => { :class => "form-horizontal"}) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <div class="control-group required">
	  	<%= f.label :name, :class => "control-label" %>
  		<div class="controls">
  			<%= f.text_field :name %>
  			<%= render :partial => "layouts/hint", :locals => {:hint => "This field will be displayed as an 'Sample Type' option when creating or updating samples."} %>
  		</div>
	  </div>
	  
      <div class="control-group">
		<div class="controls">	
      		<%= f.submit "update Sample Type", class: "btn btn-warning" %>
      	</div>
      </div>
      
    <% end %>
  </div>
</div>