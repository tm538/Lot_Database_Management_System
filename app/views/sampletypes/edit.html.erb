<% provide(:title, 'Update Sample Type') %>
<h1>Update Sample Type</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@sampletype) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name %>
	  <%= f.text_field :name %>

      <%= f.submit "Update Sample Type", class: "btn btn-large btn-warning" %>
      
    <% end %>
  </div>
</div>