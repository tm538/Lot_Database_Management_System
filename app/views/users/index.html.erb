<% provide(:title, 'All Users') %>
<h1>All Users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %> - <%= user.role %>
      <% if current_user.admin? && !current_user?(user) %>
    	| <%= link_to "Delete User", user, method: :delete,
                                  data: { confirm: "You sure you wish to delete this user?" } %>
  	   <% end %>
  	   <% if current_user.admin? %>
    	| <%= link_to "Update Password", update_password_user_path(user) %>
  	   <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>