<% provide(:title, 'Add Client') %>
<h1>New Client</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@client, :html => { :class => "form-horizontal"}) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	
	  <div class="control-group required">
      	<%= f.label :org, "Organisation", :class => "control-label" %>
      	<div class="controls">
      		<%= f.text_field :org %>
      		<%= render :partial => "layouts/hint", :locals => {:hint => "Displayname of the organisation e.g. 'University of York'."} %>
      	</div>
      </div>
      
	  <div class="control-group required">
	  	<%= f.label :contact_name, "Contact Name", :class => "control-label" %>
      	<div class="controls">
      		<%= f.text_field :contact_name %>
      		<%= render :partial => "layouts/hint", :locals => {:hint => "Name of the primary point of contact for this organisation."} %>
      	</div>
      </div>
      
      <div class="control-group required">
      	<%= f.label :email, "Contact Email", :class => "control-label" %>
      	<div class="controls">
      		<%= f.text_field :email %>
      		<%= render :partial => "layouts/hint", :locals => {:hint => "Contact email address for this organisation."} %>
      	</div>
      </div>
      
	  <div class="control-group required">
	  	<%= f.label :address, :class => "control-label" %>
	  	<div class="controls">
	  		<%= f.text_area :address %>
	  		<%= render :partial => "layouts/hint", :locals => {:hint => "Contact address for this organisation to return samples to."} %>
      	</div>
      </div>

	  <div class="control-group">
	  	<%= f.label :extra, "Extra Info", :class => "control-label"  %>
	  	<div class="controls">
	  		<%= f.text_area :extra %>
	  		<%= render :partial => "layouts/hint", :locals => {:hint => "Any addtional infomation regarding this client."} %>
      	</div>
      </div>
      
	  <div class="control-group">
		<div class="controls">	
      		<%= f.submit "Add client", class: "btn btn-primary" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>